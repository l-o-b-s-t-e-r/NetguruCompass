<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:padding="@dimen/dialog_controls_padding"
                  android:layout_marginTop="@dimen/btn_fab_half_size"
                  android:background="@drawable/dialog_background">

        <EditText style="@style/LocationEditTextStyle"
                  android:id="@+id/editLatitude"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/hint_latitude"
                  android:layout_marginBottom="@dimen/margin_xxxl"/>

        <EditText style="@style/LocationEditTextStyle"
                  android:id="@+id/editLongitude"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/hint_longitude"
                  android:layout_marginBottom="@dimen/margin_xxxl"/>

        <Button android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_primary_ripple"
                android:textColor="@color/colorWhite"
                android:text="@string/btn_apply"/>

    </LinearLayout>

    <ImageView android:id="@+id/icon_top"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/ic_pin"
               android:layout_centerHorizontal="true"/>

</RelativeLayout>